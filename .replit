modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Flask App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check Git Status"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check Git Remote"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Add"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Commit"

[[workflows.workflow]]
name = "Run Flask App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Check Git Status"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git status"

[[workflows.workflow]]
name = "Check Git Remote"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git remote -v"

[[workflows.workflow]]
name = "Git Add"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git add ."

[[workflows.workflow]]
name = "Git Commit"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git commit -am 'Update .replit file'"

[deployment]
run = ["sh", "-c", "python app.py"]

[[ports]]
localPort = 80
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
